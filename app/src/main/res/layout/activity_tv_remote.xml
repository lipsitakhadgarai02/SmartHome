<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TvRemoteActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/iv_back_remote"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart TV"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back_remote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back_remote" />

    <!-- D-pad -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dpad_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back_remote">

        <ImageView
            android:id="@+id/remote_outer_ring"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/bg_remote_outer_ring"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/bg_remote_inner_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Directional dots -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_remote_inner_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/remote_outer_ring" android:layout_marginTop="16dp"/>
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_remote_inner_circle"
            app:layout_constraintBottom_toBottomOf="@+id/remote_outer_ring"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"/>
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_remote_inner_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/remote_outer_ring"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"/>
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/bg_remote_inner_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/remote_outer_ring"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Buttons -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dpad_container">

        <ImageButton style="@style/RemoteButton" android:src="@drawable/ic_arrow_back"/>
        <ImageButton style="@style/RemoteButton" android:src="@drawable/ic_tv"/>
        <ImageButton style="@style/RemoteButton" android:src="@drawable/ic_play"/>
        <ImageButton style="@style/RemoteButton" android:src="@drawable/ic_volume_off"/>

    </GridLayout>

    <!-- Volume Rocker -->
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_remote_volume_rocker"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dpad_container" android:layout_marginTop="100dp" android:layout_marginEnd="60dp">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_plus" app:tint="@color/primary_teal"/>
        <View android:layout_height="40dp" android:layout_width="1dp" android:background="#E0E0E0" android:layout_marginVertical="8dp"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_remove" app:tint="@color/primary_teal"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/iv_power"
        style="@style/RemoteButton.Circular"
        android:src="@drawable/ic_power"
        app:tint="@color/primary_teal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dpad_container" android:layout_marginEnd="32dp"/>

    <ImageButton
        android:id="@+id/iv_search"
        style="@style/RemoteButton.Circular"
        android:src="@drawable/ic_search"
        app:tint="@color/primary_teal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dpad_container" android:layout_marginStart="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>