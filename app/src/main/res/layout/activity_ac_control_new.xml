<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AcControlActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/iv_back_ac"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_teal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Living Room"
        android:textColor="@color/primary_teal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_back_ac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_back_ac" />

    <!-- AC Info Section -->
    <TextView
        android:id="@+id/tv_ac_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="AC"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back_ac" />

    <TextView
        android:id="@+id/tv_ac_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bed Room"
        android:textColor="@color/gray_text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_ac_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_ac_title" />

    <LinearLayout
        android:id="@+id/ll_ac_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/tv_ac_room"
        app:layout_constraintTop_toBottomOf="@+id/tv_ac_room">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumbTint="@color/white"
            app:trackTint="@color/light_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="OFF"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- AC Illustration Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_ac_title">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_room_card"
            android:padding="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_ac"
                app:tint="@color/primary_teal" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- AC Modes Row -->
    <LinearLayout
        android:id="@+id/ll_modes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_ac_switch">

        <LinearLayout style="@style/AcModeItem" android:background="@drawable/bg_ac_mode_selected">
            <ImageView style="@style/AcModeIcon" android:src="@drawable/ic_lightning" app:tint="@color/primary_teal" />
            <TextView style="@style/AcModeText" android:text="Heat" android:textColor="@color/primary_teal" />
        </LinearLayout>

        <LinearLayout style="@style/AcModeItem">
            <ImageView style="@style/AcModeIcon" android:src="@drawable/ic_cloud" />
            <TextView style="@style/AcModeText" android:text="Cool" />
        </LinearLayout>

        <LinearLayout style="@style/AcModeItem">
            <ImageView style="@style/AcModeIcon" android:src="@drawable/ic_mic" />
            <TextView style="@style/AcModeText" android:text="Dry" />
        </LinearLayout>

        <LinearLayout style="@style/AcModeItem">
            <ImageView style="@style/AcModeIcon" android:src="@drawable/ic_menu" />
            <TextView style="@style/AcModeText" android:text="Fan" />
        </LinearLayout>
    </LinearLayout>

    <!-- Temperature Circular Control Simulation -->
    <FrameLayout
        android:id="@+id/fl_temp_control"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_modes">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_remote_outer_ring"
            android:alpha="0.1" />

        <View
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_remote_inner_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="24Â°C"
            android:textColor="@color/primary_teal"
            android:textSize="56sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Up/Down Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/fl_temp_control">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_remove" />
        </androidx.cardview.widget.CardView>

        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Bottom Navbar -->
    <include
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>