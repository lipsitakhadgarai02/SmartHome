<?xml version="1.0" encoding="utf-8"?>
<!--
    DeviceDiscoveryActivity Layout
    Created for: Smart Home Project
    Purpose: Handles the UI for finding and displaying nearby smart devices.
    Contains: Header, Scanning Animation/Illustration, and Found Device List.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DeviceDiscoveryActivity">

    <!-- Header Section: Back button and Title -->
    <ImageView
        android:id="@+id/btn_back_discovery"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_teal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finding Nearby Devices ."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back_discovery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back_discovery" />

    <!-- Scanner Section: Illustration showing searching status -->
    <ImageView
        android:id="@+id/iv_discovery_scanner"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_scanning_device"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_discovery" />

    <!-- Results Section: Grid-like display of discovered devices -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_discovery_scanner">

        <!-- Device: Air Conditioner -->
        <LinearLayout
            android:id="@+id/ll_found_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/ll_found_fan"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_found_device_circle" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="-56dp"
                android:src="@drawable/ic_ac"
                app:tint="@color/primary_teal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="Device found AC"
                android:textColor="@color/primary_teal"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Device: Smart Fan -->
        <LinearLayout
            android:id="@+id/ll_found_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ll_found_ac"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_found_device_circle" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="-56dp"
                android:src="@drawable/ic_launcher_foreground"
                app:tint="@color/primary_teal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="Device found Fan"
                android:textColor="@color/primary_teal"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Device: Smart TV -->
        <LinearLayout
            android:id="@+id/ll_found_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_found_ac">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_found_device_circle" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="-56dp"
                android:src="@drawable/ic_tv"
                app:tint="@color/primary_teal" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="Device found TV"
                android:textColor="@color/primary_teal"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Navigation: Included from shared layout -->
    <include
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>